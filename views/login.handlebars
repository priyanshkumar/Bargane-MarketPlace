{{> header}}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3  border border-secondary p-5">
            <img src="../public/images/bargane-notxt.png" alt="">
            <h2>Login Form</h2>
            <form class="login">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>
                <div style="display: none" id="alerts" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn-default">Login</button>
            </form>
            <br />
            <p>Or sign up <a href="/sign-up">here</a></p>
        </div>
    </div>
</div>
{{> footer}}
<script type="text/javascript" src="js/login.js"></script>