{{> header-brand}}
{{> header}}



<div class="container my-5 text-secondary">
    {{#each post}}
    <div class="row border-bottom mb-2 py-2">
        <div class="col-3">
            <img src="{{logo}}" class="ua-display" alt="Not Availabel">
        </div>
        <div class="col-3 d-flex align-items-center">
            <h3 class="my-0">
                {{name}}
            </h3>
        </div>
        <div class="col-3 d-flex align-items-center">
            <h4 class="my-0"><strong>${{price}}</strong></h4>
        </div>
        <div class="col-1 d-flex align-items-center">
            <a href="/update/ad/{{id}}" class="btn btn-success pt-1 pb-0">
                <ion-icon name="create"></ion-icon>
            </a>
        </div>
        <div class="col-1 d-flex align-items-center">
            <a href="/delete/ad/{{id}}" class="btn btn-danger pt-1 pb-0">
                <ion-icon name="trash"></ion-icon>
            </a>
        </div>
        <div class="col-1 d-flex align-items-center">
            <a href="/view/ad/{{id}}" class="btn btn-primary pt-1 pb-0">
                <ion-icon name="eye"></ion-icon>
            </a>
        </div>
        <hr>


    </div>
    {{/each}}


</div>
{{> footer}}