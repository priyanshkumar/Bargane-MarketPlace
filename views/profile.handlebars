{{> header-brand}}

{{#if checker}}
{{> header check=true}}
{{else}}
{{> header check=false}}
{{/if}}

<div class="container my-2">

    <div class="row col-9">
        <div class="row text-secondary m-4">Click here to view your posts!</div>
        <br>
        <div class="col-12 profbox text-light p-2">
            <div class="row">
                <div class="col-6 d-flex justify-content-start align-items-center text-light py-2">
                    <h5 class="font">Your Profile</h5>
                </div>
                <div class="col-6 d-flex justify-content-end text-light py-2">
                    <a href="/update" id="update" class="btn btn-large">
                        <ion-icon class="text-light" name="create"></ion-icon>
                    </a>

                </div>
            </div>
            <hr class="h-line mt-0">
            <div class="row mb-2">
                <div class="col-12">
                    <table class="profiletable">
                        <tr>
                            <td>Name:</td>
                            <td>{{profile.fName}} {{profile.lName}}</td>
                        </tr>

                        <tr>
                            <td>Email:</td>
                            <td>{{profile.email}}</td>
                        </tr>
                        <tr>
                            <td>Phone:</td>
                            <td>{{profile.phone}}</td>
                        </tr>
                        <tr>
                            <td>Address:</td>
                            <td>{{profile.address}}</td>
                        </tr>
                        <tr>
                            <td>City:</td>
                            <td>{{profile.city}}</td>
                        </tr>
                        <tr>
                            <td>Postal Code: </td>
                            <td>{{profile.PCode}}</td>
                        </tr>
                        <tr>
                            <td>Province:</td>
                            <td>{{profile.province}}</td>
                        </tr>

                    </table>
                </div>


            </div>
        </div>

    </div>




</div>

{{> footer}}