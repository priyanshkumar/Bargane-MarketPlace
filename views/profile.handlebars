{{> header-brand}}
{{> header}}
<div class="container border my-3">

    <div class="row">
        <div class="col-12 p-0">
            <div class="bg-secondary text-align-center text-light text-center mb-3 py-2">
                <h5>Your Profile</h5>
            </div>
        </div>
    </div>

    <a href="/update" id="update" class="btn btn-large">Update</a>
    <table>
        <tr>
            <td>Name:</td>
            <td>{{profile.fName}} {{profile.lName}}</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>{{profile.email}}</td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td>{{profile.phone}}</td>
        </tr>
        <tr>
            <td>Address:</td>
            <td>{{profile.address}}</td>
        </tr>
        <tr>
            <td>City:</td>
            <td>{{profile.city}}</td>
        </tr>
        <tr>
            <td>Postal Code:</td>
            <td>{{profile.PCode}}</td>
        </tr>
        <tr>
            <td>Province:</td>
            <td>{{profile.province}}</td>
        </tr>
    </table>

</div>

{{> footer}}