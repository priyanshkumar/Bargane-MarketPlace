<div class="container my-5 ">
    <div class="row">
        <div class="col-12">{{#unless checker}}
            <h1 class="search apperance">
                NO SEARCH APPERANCE FOUND FOR 'XYZ'
            </h1>
            {{/unless}}
            {{#if checker}}
            <h1 class="search apperance">
                SEARCH APPERANCE FOR 'XYZ'
            </h1>
        </div>
    </div>

    <div class="row">
        {{#each result}}
        <div class="col-4 my-3">
            <div class="card bg-dark text-white">
                <img src="images/artist.jpg" class="card-img search-image" alt="...">
                <div class="card-img-overlay">
                    <h5 class="card-title">{{name}}</h5>
                    <h5 class="card-title">{{price}}</h5>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>