<div class="container my-5 ">
    <div class="row">
        <div class="col-12">{{#unless checker}}
            <h1 class="search apperance">
                NO SEARCH APPERANCE FOUND FOR 'XYZ'
            </h1>
            {{/unless}}
            {{#if checker}}
            <h1 class="search apperance">
                SEARCH APPERANCE FOR 'XYZ'
            </h1>
        </div>
    </div>

    <div class="row">
        {{#each result}}
        <div class="col-4 my-3">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{price}}</p>
                    <a class="btn btn-primary image" colid={{id}}>View</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
<script type="text/javascript" src="js/ad-display.js"></script>