{{> header}}


<div class="container center_div">
  <img class="userlogo" src="images/bargane-notxt.png" alt="">
  <h3 class="text-primary">Profile Form</h3>
  <form action="/api/profile" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputFirst">First Name</label>
        <input type="text" class="form-control" name="fname" id="inputFirst" placeholder="first name">
      </div>
      <div class="form-group col-md-6">
        <label for="inputLast">Last Name</label>
        <input type="text" class="form-control" name="lname" id="inputLast" placeholder="last name">
      </div>
      <div class="form-group col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="example@example.com">
      </div>
      <div class="form-group col-md-6">
        <label for="phone">Phone Number</label>
        <input type="tel" class="form-control" name="phone" id="phone" placeholder="123567890">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" name="address" id="inputAddress" placeholder="1234 Main St">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" name="city" id="inputCity" placeholder="City">
      </div>
      <div class="form-group col-md-4">
        <label for="inputProvince">Province</label>
        <select id="inputState" name="province" class="form-control">
          <option selected>Choose...</option>
          <option value="AB">Alberta</option>
          <option value="BC">British Columbia</option>
          <option value="NS">Nova Scotia</option>
          <option value="ON">Ontario</option>
          <option value="QB">Quebec</option>
        </select>
      </div>
      <div class="form-group col-md-2">
        <label for="inputZip">Postal Code</label>
        <input type="text" class="form-control" name="pcode" id="inputPostal" placeholder="A1A1A1">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

{{> footer}}