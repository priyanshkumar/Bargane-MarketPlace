{{> header-brand}}


<div class="container center_div">
  <img class="userlogo" src="images/bargane-notxt.png" alt="">
  <h3 class="text-primary font">Profile Form</h3>
  <form action="/api/profile" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputFirst">First Name</label>
        <input type="text" class="form-control" name="fname" id="inputFirst" placeholder="first name" required
          value="{{profile.fName}}">
      </div>
      <div class="form-group col-md-6">
        <label for="inputLast">Last Name</label>
        <input type="text" class="form-control" name="lname" id="inputLast" placeholder="last name" required
          value="{{profile.lName}}">
      </div>
      <div class="form-group col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="example@example.com" required
          value="{{profile.email}}">
      </div>
      <div class="form-group col-md-6">
        <label for="phone">Phone Number</label>
        <input type="text" class="form-control" name="phone" id="phone" placeholder="123567890"
          value="{{profile.phone}}" required>
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" name="address" id="inputAddress" placeholder="1234 Main St" required
        value="{{profile.address}}">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" name="city" id="inputCity" placeholder="City" value="{{profile.city}}"
          required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputProvince">Province</label>
        <select id="inputState" name="province" class="form-control" required>
          <option selected>{{#if profile}}
            {{profile.province}}
            {{/if}}
          </option>
          <option value="AB">Alberta</option>
          <option value="BC">British Columbia</option>
          <option value="NS">Nova Scotia</option>
          <option value="ON">Ontario</option>
          <option value="QB">Quebec</option>
        </select>
      </div>
      <div class="form-group col-md-2">
        <label for="inputZip">Postal Code</label>
        <input type="text" class="form-control" name="pcode" id="inputPostal" placeholder="A1A1A1" required
          value="{{profile.PCode}}" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

{{> footer}}